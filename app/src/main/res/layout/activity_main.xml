<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="io.github.firemaples.livestreamingpoc.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room name:"/>

        <EditText
            android:id="@+id/et_roomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LouisTest"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_rtmpRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RTMP Recorder"/>

    <Button
        android:id="@+id/bt_hlsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HLS Player"/>

</LinearLayout>
